<div class="fixed top-0 inset-x-0 m-4 z-30">
  <div class="flex flex-col items-end space-y-4">
    <% flash.each do |flash_type, flash_message| %>
      <div data-controller="alert" data-alert-dismiss-after-value="2000" class="max-w-sm w-full shadow-lg rounded px-4 py-3 rounded relative pointer-events-auto <%= tailwind_classes_for(flash_type) %>">
        <div class="p-2">
          <div class="flex items-start">
            <div class="ml-3 w-0 flex-1 pt-0.5">
              <p class="text-sm leading-5 font-medium">
                <%= flash_message %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
